{
  "manifest_version": 3,
  "name": "wordwise",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://cs4wqtl2-3000.inc1.devtunnels.ms/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "wordwise"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  
      "js": ["libs/marked.min.js", "content.js"]
    }
  ]
}
